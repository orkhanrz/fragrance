@{
    ViewData["Title"] = "Login";
}

<main class="py-32">
    <div class="w-1/2 mx-auto text-center">
        <h1 class="text-3xl font-bold mb-2">Admin</h1>
        <p class="text-gray font-primary mb-8">Please login using account details below</p>

        <form method="post" action="/admin/login">
            <input class="border border-lightGrey w-full p-5 mb-8 text-sm outline-none focus:border-primary" placeholder="Email" type="email" id="email" name="UserEmail" />
            <input class="border border-lightGrey w-full p-5 mb-8 text-sm outline-none focus:border-primary" placeholder="Password" type="password" id="password" name="UserPassword" />
            <div class="flex items-center justify-between mb-6">
                <button class="py-5 px-10 font-semibold bg-primary text-white hover:bg-gray transition-colors transition-100">Sign in</button>
                <a href="#">Forgot your password?</a>
            </div>
        </form>
    </div>
</main>