@{
    ViewData["Title"] = "Register";
}

<section class="py-14 bg-lightGrey">
    <h1 class="text-4xl font-bold text-center mb-6">Register</h1>
    <ul class="flex justify-center gap-2">
        <li class="relative after:content-['>'] after:ml-2 after:text-gray text-gray"><a href="/">Home</a></li>
        <li><a href="/auth/register">Register</a></li>
    </ul>
</section>

<section class="py-32">
    <div class="w-1/2 mx-auto text-center">
        <h1 class="text-3xl font-bold mb-2">Register</h1>
        <p class="text-gray font-primary mb-8">Please register using account details bellow</p>

        <form method="post" action="/auth/register">
            <input class="border border-lightGrey w-full p-5 mb-8 text-sm outline-none focus:border-primary" placeholder="First name" type="text" id="first_name" name="UserName" />
            <input class="border border-lightGrey w-full p-5 mb-8 text-sm outline-none focus:border-primary" placeholder="Last name" type="text" id="last_name" name="UserSurname" />
            <input class="border border-lightGrey w-full p-5 mb-8 text-sm outline-none focus:border-primary" placeholder="Email" type="email" id="email" name="UserEmail" />
            <input class="border border-lightGrey w-full p-5 mb-8 text-sm outline-none focus:border-primary" placeholder="Password" type="password" id="password" name="UserPassword" />

            <button class="py-5 px-10 font-semibold bg-primary text-white mr-auto block mb-6 hover:bg-gray transition-colors transition-100">Register</button>

            <a class="block mr-auto w-fit" href="/">Return to store</a>
        </form>
    </div>
</section>